[Unit]
Description=Polymarket BTC 15m Trading Bot
After=network.target

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/home/ubuntu/clawd/bots/polymarket
ExecStart=/home/ubuntu/clawd/bots/polymarket/venv/bin/python btc_15m_bot_v3.py
Restart=always
RestartSec=10
Environment=PYTHONUNBUFFERED=1

[Install]
WantedBy=multi-user.target
